# NetData Configuration
[global]
  run as user = {{ netdata_user }}
  web files owner = {{ netdata_web_files_owner }}
  web files group = {{ netdata_web_files_group }}
  # Netdata is not designed to be exposed to potentially hostile
  # networks.See https://github.com/firehol/netdata/issues/164
  {% if netdata_bind_socket_to_IP -%}
  bind socket to IP = {{ netdata_bind_socket_to_IP }}
  {% endif %}
  default port = {{ netdata_default_port }}

[backend]
  enabled = no
  hostname = {{ netdata_backend_hostname }}
  update every = {{ netdata_backend_update_every }}
  timeout ms = {{ netdata_backend_timeout_ms }}
  send charts matching = {{ netdata_backend_charts | join(' ')}}

[plugins]
{% for plugin, state in netdata_active_plugins.iteritems() %}
  {{plugin}} = {{ 'yes' if state else 'no' }}
{% endfor %}

{% for plugin in netdata_openio_plugins %}
{% if plugin['enabled'] %}
{% if plugin['name'] != 'container' or (netdata_container_plugin_host and (netdata_container_plugin_host == ansible_hostname)) %}
[plugin:{{ plugin['name'] }}]
    update every = {{ plugin['every'] if 'every' in plugin else netdata_backend_update_every }}
    command options = --ns {{netdata_openio_namespaces}} {{ plugin['opts'] }}
{% endif %}
{% endif %}
{% endfor %}


[netdata.backend_metrics]
  enabled=no

[netdata.backend_bytes]
  enabled=no

[netdata.backend_ops]
  enabled=no

[netdata.backend_thread_cpu]
  enabled=no

[netdata.private_charts]
  enabled=no

{% for t in ('ect','errors','icmp','icmpmldv2','icmpneighbor','icmprouter','icmptypes') %}
[ipv6.{{t}}]
  enabled=no
{% endfor %}

{% for t in ('vmem','threads','processes','preads','pipes','minor_faults','mem','major_faults','lwrites','lreads','files','cpu_user','cpu_system','cpu') %}
[groups.{{t}}]
  enabled=no
[users.{{t}}]
  enabled=no
{% endfor %}
